<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_gravity="bottom"
        android:background="@drawable/gradient_shadow_bottom"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <LinearLayout
        android:id="@+id/bottom_nav_container"
        android:layout_width="match_parent"
        android:tag="bottom_nav_container"
        android:layout_gravity="bottom"
        android:background="?attr/colorBackgroundFloating"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bottom_nav_item0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="center"
            android:src="@drawable/ic_list"
            android:tint="@color/selectable_color" />

        <ImageView
            android:id="@+id/bottom_nav_item1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="center"
            android:src="@drawable/ic_chat"
            android:tint="@color/selectable_color" />

        <ImageView
            android:id="@+id/bottom_nav_item2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="center"
            android:src="@drawable/ic_notifications"
            android:tint="@color/selectable_color" />

        <ImageView
            android:id="@+id/bottom_nav_item3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="center"
            android:src="@drawable/ic_settings"
            android:tint="@color/selectable_color" />
    </LinearLayout>

    <ImageView
        android:id="@+id/bottom_nav_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/red_dot" />
</merge>