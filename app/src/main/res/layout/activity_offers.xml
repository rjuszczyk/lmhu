<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <eu.letmehelpu.android.view.ScrollableWithCollapsing
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="54dp"
        app:scvScrollableViewId="@id/offer_list"
        app:scvCollapsingViewId="@id/collapsingToolbar"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/offer_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:clipToPadding="false"
            >



        </android.support.v7.widget.RecyclerView>

        <eu.letmehelpu.android.view.CollapsingToolbarWithPagerIndicator
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </eu.letmehelpu.android.view.ScrollableWithCollapsing>

    <FrameLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_gravity="bottom"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/gradient_shadow_bottom"
            android:layout_gravity="bottom"
            android:layout_marginBottom="54dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="?attr/colorBackgroundFloating"
            android:layout_gravity="bottom"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/bottom_nav_item0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_list"
                android:scaleType="center"
                android:tint="@color/selectable_color"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                />
            <ImageView
                android:id="@+id/bottom_nav_item1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_chat"
                android:scaleType="center"
                android:tint="@color/selectable_color"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                />
            <ImageView
                android:id="@+id/bottom_nav_item2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_notifications"
                android:scaleType="center"
                android:tint="@color/selectable_color"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                />
            <ImageView
                android:id="@+id/bottom_nav_item3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_settings"
                android:scaleType="center"
                android:tint="@color/selectable_color"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/bottom_nav_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/red_dot"
            />
    </FrameLayout>


</FrameLayout>
